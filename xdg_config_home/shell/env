#!/bin/sh

# Colors
. "$XDG_CONFIG_HOME/colors/colors.sh"

# Extra XDG env variables.
export XDG_MUSIC_DIR="$HOME/music"
export XDG_PICTURES_DIR="$HOME/pictures"
export XDG_MUSIC_DIR="$HOME/music"

export XDG_DATA_DIRS="$XDG_DATA_HOME/:/usr/local/share/:/usr/share/"
export XDG_CONFIG_DIRS="$XDG_CONFIG_HOME/:/etc/xdg"

# Useful stuff.
export EDITOR="/usr/bin/vim -u $XDG_CONFIG_HOME/vim/.vimrc"
export VISUAL="$EDITOR"
export PAGER="less"
export MANPAGER="$PAGER"

# Forcing more xdg spec compliance
export CABAL_CONFIG="$XDG_CONFIG_HOME/cabal/config"
export ECLIPSE_DIR="$XDG_CONFIG_HOME/eclipse"
export GEM_DIR="$XDG_DATA_HOME/lib/gems"
export GEM_PATH="$XDG_DATA_HOME/bin:$GEM_HOME/bin"
export GEM_SPEC_CACHE="$XDG_CACHE_HOME/gem"
export GIMP2_HOMEECTORY="$XDG_CONFIG_HOME/gimp2"
export LESSHISTFILE="$XDG_CACHE_HOME/less/hist"
export MPV_HOME="$XDG_CONFIG_HOME/mpv"
export GOPATH="$HOME/src/go"
export PASSWORD_STORE_HOME="$XDG_DATA_HOME/password-store"
export PULSE_COOKIE="$XDG_RUNTIME_HOME/pulse/cookie"
export PYLINTHOME="$XDG_CACHE_HOME/pylint"
export PYTHONPATH="$XDG_DATA_HOME/bin"
export TEXMFCONFIG="$XDG_CONFIG_HOME/tex/mfconfig"
export TEXMFHOME="$XDG_CONFIG_HOME/tex/mfhome"
export TEXMFVAR="$XDG_RUNTIME_HOME/tex/mfvar"
export WINEPREFIX="$XDG_CONFIG_HOME/wine"
export ZDOTDIR="$XDG_CONFIG_HOME/zsh"

# Include bin, cabal, gem path.
PATH=$XDG_DATA_HOME/bin:$GEM_HOME/bin:$GOPATH/bin:$HOME/.cabal/bin:/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin

