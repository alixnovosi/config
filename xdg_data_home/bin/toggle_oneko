#!/bin/sh
# Toggle whether oneko is running or not.

if [ "$(pgrep 'oneko')" -gt 0 ]; then
    # Oneko process detected, kill and restore cursor and exit.
    killall -9 oneko
    xsetroot -cursor_name left_ptr

else
    # Oneko process not detected, launch with preferred settings in background.
    oneko -tofocus &
fi
