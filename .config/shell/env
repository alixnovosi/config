#!/bin/sh

# XDG base spec.  OS-independent, theoretically.
export XDG_DATA_HOME="$HOME/.local/share"
export XDG_CONFIG_HOME="$HOME/.config"
export XDG_CACHE_HOME="$HOME/.cache"
export XDG_DATA_DIRS="/usr/local/share/:/usr/share/"
export XDG_CONFIG_DIRS="/etc/xdg"

# Colors
. "$XDG_CONFIG_HOME/shell/colors"

# Useful stuff.
export EDITOR="/usr/bin/vim -u $XDG_CONFIG_HOME/vim/.vimrc"
export VISUAL="$EDITOR"
export PAGER="less"
export MANPAGER="$PAGER"

# Set path to include home bin and cabal's folder.
mkdir -p "${HOME}/.local/bin"
PATH=${HOME}/.local/bin:~/.cabal/bin:/usr/local/bin:/usr/local/sbin:$PATH

# Forcing more xdg spec compliance
export CABAL_CONFIG="$XDG_CONFIG_HOME/cabal/config"
export ECLIPSE_HOME="$XDG_CONFIG_HOME/eclipse"
export GEM_HOME="$HOME/.local/lib/gems"
export GEM_PATH="$HOME/.local/bin:$HOME/.local/lib/gems"
export GEM_SPEC_CACHE="$XDG_CACHE_HOME/gem"
export GIMP2_DIRECTORY="$XDG_CONFIG_HOME/gimp2"
export LESSHISTFILE="$XDG_CACHE_HOME/less/hist"
export MPV_HOME="$XDG_CONFIG_HOME/mpv"
export PASSWORD_STORE_DIR="$XDG_DATA_HOME/password-store"
export PULSE_COOKIE="$XDG_RUNTIME_DIR/pulse/cookie"
export PYLINTHOME="$XDG_CACHE_HOME/pylint"
export PYTHONPATH="$HOME/.local/bin"
export TEXMFCONFIG="$XDG_CONFIG_HOME/tex/mfconfig"
export TEXMFHOME="$XDG_CONFIG_HOME/tex/mfhome"
export TEXMFVAR="$XDG_RUNTIME_HOME/tex/mfvar"
export WINEPREFIX="$XDG_CONFIG_HOME/wine"
